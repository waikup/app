<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.wakeup.alarm"
        version     = "1.0.0" >

    <preference name="phonegap-version" value="3.6.3" />

    <name>WakeUp</name>

    <description>Changing the way you wake up</description>

    <gap:platform name="ios" />
    <gap:platform name="android" />
    <preference name="android-minSdkVersion" value="17" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="UIWebViewBounce" value="false" />
    <access origin="*" />

    <gap:plugin name="org.apache.cordova.device" version="0.2.3" />
    <gap:plugin name="de.appplant.cordova.plugin.background-mode" version="0.5.0" />
    <gap:plugin name="com.unarin.cordova.beacon" version="3.0.0" />

</widget>
